@model OrderTest_Model.Order
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать!</h1>
    <p>Заполните все поля для оформления заявки</p> 
</div>

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 pt-4">
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="SenderCity">Город отправителя</label>
                </div>
                <div class="col-8">
                    <input asp-for="SenderCity" class="form-control" maxlength="20" />
                    <span asp-validation-for="SenderCity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="SenderAdress">Адрес отправителя</label>
                </div>
                <div class="col-8">
                    <input asp-for="SenderAdress" class="form-control" maxlength="50" />
                    <span asp-validation-for="SenderAdress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="DeliveryCity">Город получателя</label>
                </div>
                <div class="col-8">
                    <input asp-for="DeliveryCity" class="form-control" maxlength="20" />
                    <span asp-validation-for="DeliveryCity" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="DeliveryAdress">Адрес получателя</label>
                </div>
                <div class="col-8">
                    <input asp-for="DeliveryAdress" class="form-control" maxlength="50" />
                    <span asp-validation-for="DeliveryAdress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="Weight">Вес посылки</label>
                </div>
                <div class="col-8">
                    <input asp-for="Weight" class="form-control" maxlength="6" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-4">
                    <label asp-for="PickUpDate">Дата забора посылки</label>
                </div>
                <div class="col-8">
                    <input asp-for="PickUpDate" class="form-control" />
                    <span asp-validation-for="PickUpDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row py-2">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">Отправить заявку.</button>
                </div>
            </div>
        </div>
    </div>
    @section scripts {
        <script>
            $(document).ready(function () {
                var today = new Date().toISOString().split('T')[0];
                $("input[type='date']").attr('min', today);
            });
        </script>
    }
</form>
